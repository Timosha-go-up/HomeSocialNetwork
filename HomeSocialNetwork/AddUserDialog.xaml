<Window x:Class="HomeSocialNetwork.AddUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeSocialNetwork"
        mc:Ignorable="d"
        Title="Добавить пользователя" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">


    <Grid Margin="16" >
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>  
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

        <!-- First Name -->
        <Label Grid.Row="0" FontWeight="Bold" Grid.Column="0" Content="Имя (FirstName):" />
        <TextBox  FontWeight="Bold" Grid.Row="0" Grid.Column="1" x:Name="FirstNameTextBox" 
             ToolTip="Обязательное поле" />

        <!-- Last Name -->
        <Label Grid.Row="1" FontWeight="Bold" Grid.Column="0" Content="Фамилия (LastName):" />
        <TextBox Grid.Row="1" FontWeight="Bold" Grid.Column="1" x:Name="LastNameTextBox"
             ToolTip="Можно не указывать" />

        <!-- Phone Number -->
        <Label Grid.Row="2" FontWeight="Bold" Grid.Column="0" Content="Телефон (PhoneNumber):" />
        <TextBox Grid.Row="2" FontWeight="Bold" Grid.Column="1" x:Name="PhoneNumberTextBox"
             ToolTip="Формат: +7 XXX XXX-XX-XX" />

        <!-- Email -->
        <Label Grid.Row="3" FontWeight="Bold" Grid.Column="0" Content="Email:" />
        <TextBox Grid.Row="3" Grid.Column="1" FontWeight="Bold" x:Name="EmailTextBox"
            ToolTip="Обязательное поле, уникальный адрес" />

        <!-- Пароль -->
        <Label Grid.Row="4" FontWeight="Bold" Grid.Column="0" Content="Пароль (Password):" />
        <PasswordBox Grid.Row="4" Grid.Column="1"  FontWeight="Bold" x:Name="PasswordBox"
                ToolTip="Обязательное поле, минимум 6 символов" />
        <!-- Кнопки -->
        <StackPanel Grid.Row="5"  Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="ОК" FontWeight="Bold" Width="70" Click="OkButton_Click" IsDefault="True" Margin="20 0 10 0"/>
            <Button Content="Отмена"  FontWeight="Bold" Width="70" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

