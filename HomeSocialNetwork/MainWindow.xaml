<Window x:Class="HomeSocialNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeSocialNetwork"
        mc:Ignorable="d"
        Title="HomeSocialNetwork" Height="600" Width="1000" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="36*"/>
        </Grid.ColumnDefinitions>
        <!-- Шапка -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Image Source="/Resources/logo.png" Width="40" Height="40"/>
            <TextBlock Text="HomeSocialNetwork" FontSize="20" FontWeight="Bold" Margin="10,0"/>
        </StackPanel>

        <!-- Меню -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,40,0,0" Grid.Column="1">
            <Button Content="Добавить" Click="AddUser_Click" Width="80" Margin="5"/>
            <Button Content="Найти" Click="FindUser_Click" Width="80" Margin="5"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80" Margin="5"/>
        </StackPanel>

        <!-- Основная область: таблица пользователей -->
        <DataGrid Name="UsersGrid" 
                  Margin="0,80,0,50"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True" Grid.ColumnSpan="2">
            <DataGrid.Columns> 
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Firs tName" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="150"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус‑бар -->
        <StatusBar VerticalAlignment="Bottom" Height="30" Grid.ColumnSpan="2">
            <TextBlock Name="StatusText" Text="Готов"/>
        </StatusBar>
    </Grid>
</Window>


