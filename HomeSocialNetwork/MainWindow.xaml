<Window x:Class="HomeSocialNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeSocialNetwork"
        mc:Ignorable="d"
        Title="HomeSocialNetwork" Height="600" Width="1000" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="36*"/>
        </Grid.ColumnDefinitions>
        <!-- Шапка -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Image Source="/Resources/logo.png" Width="40" Height="40"/>
            <TextBlock Text="HomeSocialNetwork" FontSize="20" FontWeight="Bold" Margin="10,0"/>
        </StackPanel>

        <Grid x:Name="LogPanel" Grid.ColumnSpan="2" Margin="219,100,221,0">
            <ScrollViewer Height="140"
                 VerticalScrollBarVisibility="Auto"
                 BorderThickness="2"
                 BorderBrush="DarkSlateGray"
                 Background="Black"
                 Margin="-80,0,-80,0"
                 VerticalAlignment="Top"
                 RenderTransformOrigin="0.503,0.214">
                <TextBlock x:Name="LogDisplay"
                   TextWrapping="Wrap"
                   Margin="10"
                   FontSize="14"
                   Foreground="LimeGreen"
                   FontFamily="Consolas"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"/>
            </ScrollViewer>

        </Grid>

        <!-- Меню -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,310,0,0" Grid.Column="1">
            <Button Content="Добавить" Click="AddUser_Click" Width="80" Margin="5"/>
            <Button Content="Найти" Click="FindUser_Click" Width="80" Margin="5"/>
            <Button Content="Обновить" Click="Refresh_Click" Width="80" Margin="5"/>
        </StackPanel>

        <!-- Основная область: таблица пользователей -->
        <DataGrid Name="UsersGrid"
          Margin="0,350,0,35"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          IsReadOnly="True"
          Grid.ColumnSpan="2"
          MaxHeight="140"
          VerticalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="150"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="150"/>
                <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="150"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус‑бар -->
        <StatusBar VerticalAlignment="Bottom" Height="30" Grid.ColumnSpan="2">
            <TextBlock Name="StatusText" Text="Готов"/>
        </StatusBar>
    </Grid>
</Window>


